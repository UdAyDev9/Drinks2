<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background= "@drawable/shape_confirm_cart_bg">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"

            >
            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_cart_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Milk Tea"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txt_cart_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs.00"
                        android:padding="4dp"
                        android:background="@drawable/text_round"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_sugar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sugar: 100%"
                            android:layout_weight="1"
                            android:padding="4dp"

                            android:textSize="14sp"
                            android:textStyle="italic" />
                        <TextView
                            android:id="@+id/txt_ice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ice: 100%"
                            android:layout_weight="1"
                            android:padding="4dp"

                            android:textSize="14sp"
                            android:textStyle="italic" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>



        </android.support.v7.widget.CardView>
        <TextView
           android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topping Extras"
            android:textSize="20sp"
            android:textStyle="bold" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"

        >

        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/txt_topping_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milk Cream"
            android:padding="4dp"
            android:textSize="16sp"
            android:textStyle="italic" />


    </LinearLayout>

</LinearLayout>